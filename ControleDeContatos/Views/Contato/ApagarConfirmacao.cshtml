@model ContatoModel
@{
    ViewData["Title"] = "Apagar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100 mb-2" role="button" asp-controller="Contato" asp-action="Index">
    Cancelar exclusão
</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">
    Confirmar exclusão
</a>