@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar usuário (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100 mb-2" role="button" asp-controller="Usuario" asp-action="Index">
    Cancelar exclusão
</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">
    Confirmar exclusão
</a>